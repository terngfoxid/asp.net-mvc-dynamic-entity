@model IEnumerable<PMStest.Models.Project>

@{
    ViewBag.Title = "จักการโครงการ";
}

<h2>โครงการ</h2>

<p>
    @Html.ActionLink("เพิ่มโครงการใหม่", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
            และ
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
            -
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("แก้ไข", "Edit", new { id=item.ID }) |
            @Html.ActionLink("ดูรายละเอียด", "Details", new { id=item.ID }) |
            @Html.ActionLink("ลบ", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
